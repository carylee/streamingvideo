function streaming_video_admin() {
  $form = array();

  $form['streaming_video_width'] = array(
    '#type' => 'textfield',
    '#title' => t('Width of player'),
    '#default_value' => variable_get('streaming_video_width', 340),
    '#size' => 3,
    '#maxlength' => 3,
    '#description' => t("The width of the player"),
