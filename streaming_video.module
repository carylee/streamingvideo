<?php

/**
* Implementation of hook_node_info()
*/
function streaming_video_node_info() {
  return array(
    'streaming_video' => array(
      'name' => t('Open video player'),
      'module' => 'streaming_video',
      'description' => "Embed a streaming video.",
    )
  );
}

/**
* Implementation of hook_perm()
 */
function streaming_video_perm() {
  return array('create streaming_video', 'edit own streaming_video');
}

/**
 * Implementation of hook_access()
 */
function streaming_video_access($op, $node, $account) {
  if ($op == 'create') {
    // Only users with permission to do so may create this node type.
    return user_access('create streaming_video', $account);
  }

  // Users who create a node may edit or delete it later, assuming they have the
  // necessary permissions.
  if ($op == 'update' || $op == 'delete') {
    if (user_access('edit own streaming_video', $account) && ($account->uid == $node->uid)) {
      return TRUE;
    }
  }
}

/**
 * Implementation of hook_form()
 */
function streaming_video_form(&$node) {
  $type = node_get_types('type', $node);

  // We need to define form elements for the node's title and body.
  $form['title'] = array(
    '#type' => 'textfield',
    '#title'=> check_plain($type->title_label),
    '#required' => TRUE,
    '#default_value' => $node->title,
    '#weight'=> -5
  );

  $form['body_filter']['body'] = array(
    '#type' => 'textarea',
    '#title' => check_plain($type->body_label),
    '#default_value' => $node->body,
    '#required' => FALSE
  );
  $form['body_filter']['filter'] = filter_form($node->format);

  $form['location'] = array(
    '#type' => 'textfield',
    '#title' => t('Streaming location'),
    '#default_value' => isset($node->location) ? $node->location : '',
  );

  return $form;
}

/**
 * Implementation of hook_insert()
 */
function streaming_video_insert($node) {
  db_query("INSERT INTO {streaming_video} (vid, nid, location) VALUES (%d, %d, '%s')", $node->vid, $node->nid, $node->location);
}

/**
 * Implementation of hook_update()
 */
function streaming_video_update($node) {
  // if this is a new node or we're adding a new revision,
  if ($node->revision) {
    streaming_video_insert($node);
  }
  else {
    db_query("UPDATE {streaming_video} SET location = '%s' WHERE vid = %d", $node->location, $node->vid);
  }
}

